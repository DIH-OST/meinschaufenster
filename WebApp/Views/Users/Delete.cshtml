@model Database.Tables.TableUser

@{
    ViewData["Title"] = "Löschen";
}
<script src="/lib/kendo-ui/js/messages/kendo.messages.de-AT.min.js"></script>
<div class="container">
    <h1>Löschen</h1>

    <h3>Sind Sie sicher, dass Sie diesen Kunden löschen wollen?</h3>
    <div>
        <h4>Kunden</h4>
        <hr/>
        <div class="row">
            <div class="col-md-6">
                <dl>
                    <dt>
                        Telefonnummer
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PhoneNumber)
                    </dd>
                    <dt>
                        Telefonnummer überprüft
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PhoneChecked)
                    </dd>
                    <dt>
                        Sprache
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.DefaultUserLanguage)
                    </dd>
                    <dt>
                        Erstellt am
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.CreatedAtUtc)
                    </dd>
                    <dt>
                        Vorname
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Firstname)
                    </dd>
                    <dt>
                        Nachname
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Lastname)
                    </dd>
                    <dt>
                        Straße
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.Street)
                    </dd>
                    <dt>
                        Postleitzahl
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.PostalCode)
                    </dd>
                    <dt>
                        Ort
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.City)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id"/>
                    <div class="form-group text-right">
                        <kendo-button type="submit" name="confirmDelete" icon="delete" class="k-button k-error-colored" style="margin-right: 10px">&nbsp;Delete</kendo-button>
                        <a asp-action="Index" class="k-button"><span class="k-icon k-i-cancel"></span>&nbsp;Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>