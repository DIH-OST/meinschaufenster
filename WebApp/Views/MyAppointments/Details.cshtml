@model Exchange.Model.ExMeeting

@{
    Layout = null;
}

@{
    var imgSrc = "";
    if (Model.Staff.Image != null)
    {
        var base64 = Convert.ToBase64String(Model.Staff.Image);
        imgSrc = String.Format("data:image/png;base64,{0}", base64);
    }
}

<div class="row">
    <div class="col-md-6">
        <p>
            <b>@Model.ShopName</b>
        </p>
        <p>Tel.Nr.: @Model.Staff.WhatsappContact</p>
        <p>Am: @Model.Start.ToShortDateString()</p>
        <p>Von: @Model.Start.ToString("HH:mm") - @Model.End.ToString("HH:mm") Uhr</p>
        <p>Bei @Model.Staff.Name</p>

    </div>
    <div class="col-md-6">
        <img style="width: 100%" src="@imgSrc"/>
    </div>
</div>