@model WhatsAppViewModel


@if (Model.Style == EnumModalStyle.Style2)
{
    <div class="modal-header accentColor">
        <h5 class="modal-title" id="exampleModalLongTitle">Videoberatung</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="col-sm-12 mb">
            <img src="~/images/WhatsAppAnleitung.png" style="max-width: 100%"/>
            <p>@Model.Text</p>
        </div>
        <div class="col-sm-12 mb">
            <a id="aVideonumber" class="k-button  k-primary accentColor" href="https://wa.me/@Model.PhoneNumber" target="_blank">
                <b class="mr">Videoberatung</b>
                <span class="sl-icon" style="color: white; font-size: 24px;">&#xe93c</span>
            </a>
        </div>
    </div>
    <div class="modal-footer accentColor">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Schließen</button>
    </div>
}
else
{
    <div class="row">
        <div class="col-sm-12 mb">
            <img src="~/images/WhatsAppAnleitung.png" style="max-width: 100%"/>
            <p>@Model.Text</p>
        </div>
        <div class="col-sm-12 mb">
            <a id="aVideonumber" class="k-button  k-primary accentColor" href="https://wa.me/@Model.PhoneNumber" target="_blank">
                <b class="mr">Videoberatung</b>
                <span class="sl-icon" style="color: white; font-size: 24px;">&#xe93c</span>
            </a>
        </div>
    </div>
}