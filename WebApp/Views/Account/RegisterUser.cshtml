@model RegisterUserViewModel

@{
    ViewData["Title"] = "Registrierung";
}
<div class="container">
    <h2>Registrierung als Endkunde</h2>

    <h4>Bitte gib deine Telefonnummer an</h4>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="RegisterUser">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" placeholder="Format: 0043676123456789" class="form-control"/>
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <kendo-button name="regButton" type="submit" class="k-primary">Registrieren</kendo-button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}