@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<div class="container">
    <h2>Login für Kunden</h2>

    <h4>Bitte melde dich an</h4>
    <hr/>
    <div class="row">
        <div class="col-md-4">
            <form asp-action="LoginUser" asp-route-returnurl="@ViewData["ReturnUrl"]">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Telefonnummer</label>
                    <input asp-for="UserName" placeholder="Format: 0043676123456789" class="form-control"/>
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" placeholder="Wurde dir per SMS gesendet!" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <kendo-button name="smbBtn" type="submit" class="k-primary">Anmelden</kendo-button>
                </div>
            </form>
        </div>
    </div>

    <div class="">
        <div class="form-group">
            <h3>Noch nicht registriert?</h3>
            <a class="k-button k-primary" role="button" asp-area="" asp-controller="Account" asp-action="RegisterUser">Zur Registrierung</a>
        </div>
    </div>

    <div class="">
        <div class="form-group">
            <h3>Passwort vergessen?</h3>
            <a class="k-button k-primary" role="button" asp-area="" asp-controller="Account" asp-action="ForgotPasswordUser">Zur Wiederherstellung</a>
        </div>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}