@model Database.Tables.TableEmployee

@{
    ViewData["Title"] = "Delete";

    string imgSrc = "";
    if (Model.Image != null)
    {
        var base64 = Convert.ToBase64String(Model.Image);
        imgSrc = String.Format("data:image/gif;base64,{0}", base64);
    }
}

<div class="container">

    <partial name="_StoreSettingsHeader"/>
    <script type="text/javascript">
        $("#employees").addClass("active");
    </script>


    <div class="tab-border">
        <h4 class="tab-title">Verkäufer löschen</h4>
        <hr class="tab-line"/>

        <div class="col-12">
            <div class="row">
                <div class="col-md-6">
                    <div>
                        <img src="@imgSrc"/>
                    </div>

                    <dl>
                        <dt>
                            <label>Ist Aktiv?</label>
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.Active)
                        </dd>
                        <dt>
                            <label>Vorname</label>
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.FirstName)
                        </dd>
                        <dt>
                            <label>Nachname</label>
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.LastName)
                        </dd>
                        <dt>
                            <label>Telefonnummer</label>
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.TelephoneNumber)
                        </dd>
                        <dt>
                            Was möchte der Verkäufer von den Kunden wissen?
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.DefaultAnnotation)
                        </dd>


                    </dl>

                    <form asp-action="Delete">
                        <input type="hidden" asp-for="Id"/>
                        <div class="form-group text-right">
                            <kendo-button type="submit" name="confirmDelete" icon="delete" class="k-button k-error-colored" style="margin-right: 10px">&nbsp;Löschen</kendo-button>
                            <a asp-action="Employees" asp-controller="Stores" class="k-button"><span class="k-icon k-i-cancel"></span>&nbsp;Abbrechen</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>

</div>