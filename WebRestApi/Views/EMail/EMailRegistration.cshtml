@{
    Layout = "~/Views/EMail/_EMailBase.cshtml";
}

<!-- Body -->
<table class="body-wrap" bgcolor="#f6f6f6">
    <tr>
        <td></td>
        <td class="container" bgcolor="#FFFFFF">
            <!-- content -->
            <div class="content">
                <p>
                    @Html.Raw(Model.Message)
                </p>

                <p>
                    <a href="@Model.ApproveLink">E-Mail Adresse bestätigen</a>
                </p>

                <p>
                    @Html.Raw(Model.AlternativeText)
                </p>
            </div>
        </td>
        <td></td>
    </tr>
</table>